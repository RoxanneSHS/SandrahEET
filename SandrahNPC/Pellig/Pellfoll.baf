IF
Delay(6)
InParty("CVSandr")
Global("PelligFollow","GLOBAL",1)
!InActiveArea("pellig")
!See("pellig")
!Dead("pellig")
THEN
RESPONSE #100
MoveGlobalObject("Pellig","CVSandr")
ActionOverride("Pellig",MoveToObjectOffset("CVSandr",[-30.30]))
END

IF
!Allegiance("Pellig",CONTROLLED)
InParty("CVSandr")
Delay(10)
THEN
RESPONSE #100
ChangeEnemyAlly("Pellig",CONTROLLED)
END

